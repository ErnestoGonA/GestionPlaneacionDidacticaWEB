@model IEnumerable<GestionPlaneacionDidacticaWEB.AlterMod.extended_eva_planeacion_enseñanza>

    @{
        ViewData["Title"] = "FicViPlaneacionEnseñanzaList";
    }

    <h2>FicViPlaneacionEnseñanzaList</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <div class="row">
        <input type="text" id="myInput" placeholder="Search .." title="Type in a name">
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DesAsignatura)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReferenciaNorma)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DesTema)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DesCompetencia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DesActividadEnseñanza)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaReg)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaProgramada)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaRealizada)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DesAsignatura)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReferenciaNorma)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DesTema)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DesCompetencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DesActividadEnseñanza)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaReg)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaProgramada)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaRealizada)
                    </td>

                    <td>
                        @Html.ActionLink("EditTest", "FicViPlaneacionEnseñanzaUpdate", new { @IdAsignatura = item.IdAsignatura, @IdPlaneacion = item.IdPlaneacion, @IdTema = item.IdTema, @IdCompetencia = item.IdCompetencia, @IdActividadEnseñanza = item.IdActividadEnseñanza })
                        @Html.ActionLink("DetailsTest", "FicViPlaneacionEnseñanzaDetail", new { @IdAsignatura = item.IdAsignatura, @IdPlaneacion = item.IdPlaneacion, @IdTema = item.IdTema, @IdCompetencia = item.IdCompetencia, @IdActividadEnseñanza = item.IdActividadEnseñanza }) |
                        <!--Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })-->
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#myModal"
                                data-whatever="@item.DesAsignatura">
                            Delete
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog modal-sm" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
                                    </div>
                                    <div class="modal-body">
                                        <h2 style="color:black;">¿Estas seguro de eliminar el registro?</h2>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        @Html.ActionLink("Delete", "FicViPlaneacionEnseñanzaDelete", new { @IdAsignatura = item.IdAsignatura, @IdPlaneacion = item.IdPlaneacion, @IdTema = item.IdTema, @IdCompetencia = item.IdCompetencia, @IdActividadEnseñanza = item.IdActividadEnseñanza })
                                        <!--<input type="submit" value="Delete" class="btn btn-danger" asp-action="FicViAlumnoCarreraDelete" asp-route-id="item.IdAlumno" />-->
                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
